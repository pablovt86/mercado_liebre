<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>
    <!-- <script src="/javascripts/productAdd.js"></script> -->

    <body>
        <%- include('partials/header') %>
            <div class="container">
                <section class="addProduct">
                    <div class="row">
                        <div class="titulo col-12">
                            <h2>
                                <%= title %>
                            </h2>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="contenido text-left ">
                            <div class="row">

                                <div class="col-12 col-md-5 col-xl-4 categorias ">
                                    <h5 class="mb-5"></h5>
                                    <% categorias.forEach(categoria => { %>
                                        <div class="accordion " id="accordionExample">
                                            <div class="">
                                                <div class="card-header p0" id="headingOne <%=categoria.id %>">

                                                    <h2 class="mb-0">
                                                        <button class="btn btn-outline-dark btn-block text-left " type="button" data-toggle="collapse" data-target="#collapseOne <%=categoria.id %>" aria-expanded="true" aria-controls="collapseOne<%= categoria.id %>">

                                                                  <%= categoria.name %> 

                                                        </button>
                                                    </h2>
                                                </div>

                                                <div id="collapseOne <%= categoria.id %>" class="collapseOne" aria-labelledby="headingOne <%= categoria.id %>" data-parent="accordionExample">

                                                    <% categoria.sub.forEach(sub => { %>




                                                        <div class="card">
                                                            <ul class="list-group list-group-flush">
                                                                <li class="list-group item list-group-item-dark m-2">
                                                                    <a href="/products/add/form/?categoria=<%= categoria.name %> &sub=<%= sub %>" class="ml-2">
                                                                        <%= sub %>
                                                                    </a>
                                                                </li>

                                                            </ul>

                                                        </div>


                                                        <% }) %>

                                                </div>

                                            </div>

                                        </div>
                                        <% }) %>
                                </div>
                                <div class="col-12 col-md-7 col-xl-8 formulario">
                                    <% if (categoria!=undefined) { %>


                                        <div>
                                            <h5 class="mb-3">Datos Del Producto</h5>
                                            <form action="" method="POST" enctype="multipart/form-data">
                                                <div class="form-group ">
                                                    <label for="">categoria</label>
                                                    <input type="text" class="form-control" name="category" value="<%= sub %> ">
                                                </div>
                                                <br>
                                                <div class="form-group ">
                                                    <label for="">Titulo de la publicacion</label>
                                                    <input type="text" class="form-control" name="name" value="">
                                                </div>
                                                <br>
                                                <div class="form-row">
                                                    <div class="col ">
                                                        <label for="">Precio</label>
                                                        <input type="number" class="form-control" name="price">
                                                    </div>
                                                    <br>

                                                    <div class="col ">
                                                        <label for="">Descuento</label>
                                                        <input type="number" class="form-control " name="discount">
                                                    </div>
                                                    <br>
                                                </div>
                                                <div class="form-group mt-3 ">
                                                    <label for="exampleFormControlTextarea">descripcion</label>
                                                    <textarea class="form-control " name="description" id="exampleFormControlTextarea" rows="3"></textarea>
                                                </div>

                                                <div class="form-group mt-3 ">
                                                    <label for="">Elija una foto</label>
                                                    <input type="file" name="file" id="exampleFormFile" name="image">
                                                </div>

                                                <br>
                                                <div class="mt-5 mr-5 d-flex justify-content-end ">
                                                    <button type="reset " class="btn btn-outline-secondary mr-3 ">borrar
                                                      </button>
                                                    <button type="submit " class="btn btn-outline-primary  ">publicar
                                                    </button>
                                                </div>
                                            </form>

                                        </div>
                                        <% } %>
                                </div>

                            </div>
                            <!-- aca termina el segundo formulario -->
                        </div>

                    </div>

            </div>

            </section>
            </div>

















            <%- include('partials/footer') %>
    </body>

</html>